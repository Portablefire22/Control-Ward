{
  "manifest_version": 2,
  "name": "Control Ward",
  "version": "1.0",

  "description": "Notifies a user when selected Twitch streamers are live.",

  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "control-ward@kitten.rs",
      "strict_min_version": "49.0"
    }
  },
  "permissions": [
    "activeTab",
    "identity",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["control-background.js"],
    "persistent": true,
    "type": "module"
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/border-48.png"
    },
    "default_title": "Hello?",
    "default_popup": "popup/menu.html"
  }
}